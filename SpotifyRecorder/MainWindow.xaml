<Controls:MetroWindow x:Class="SpotifyRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:windowTheming="clr-namespace:SpotifyRecorder.WindowTheme"
        xmlns:local="clr-namespace:SpotifyRecorder"
        xmlns:logBox="clr-namespace:LogBox;assembly=LogBox"
        xmlns:converters="clr-namespace:SpotifyRecorder.Converters"
        mc:Ignorable="d"
        Title="Spotify Recorder" Height="800" Width="800"
        Loaded="MetroWindow_Loaded"
        ResizeMode="CanResizeWithGrip"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Controls:MetroWindow.Resources>
        <logBox:BitmapToImageSourceConverter x:Key="BitmapImageSourceConverter"/>
        <converters:IsPlayingToIconConverter x:Key="IsPlayingIconConverter"/>
        <converters:IsConnectedToIconConverter x:Key="IsConnectedIconConverter"/>
        
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
        </Style>
        <Style TargetType="ToolTip">
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Controls:MetroWindow.Resources>

    <Controls:MetroWindow.LeftWindowCommands>
        <Controls:WindowCommands>
            <Button Command="{Binding ConnectCommand}" ToolTip="Connect to player application">
                <iconPacks:PackIconMaterial Width="22" Height="22" Kind="LinkVariant" Foreground="{DynamicResource IdealForegroundColorBrush}"/>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.LeftWindowCommands>
    
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <windowTheming:WindowThemeUserControl/>

            <Button Command="{Binding InfoCommand}" ToolTip="About this application">
                <iconPacks:PackIconModern Width="22" Height="22" Kind="InformationCircle" Foreground="{DynamicResource IdealForegroundColorBrush}"/>
            </Button>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="35"/>
                    <RowDefinition Height="300"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Grid.Row="0" Grid.Column="0" Kind="Music" ToolTip="Track" Height="Auto" Width="Auto" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource AccentBaseColorBrush}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" ToolTip="Track" Text="{Binding PlayerApp.CurrentPlaybackStatus.Track.TrackName}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>

                <iconPacks:PackIconMaterial Grid.Row="1" Grid.Column="0" Kind="Account" ToolTip="Artist" Height="Auto" Width="Auto" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource AccentBaseColorBrush}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" ToolTip="Artist" Text="{Binding PlayerApp.CurrentPlaybackStatus.Track.Artists[0].ArtistName}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>

                <iconPacks:PackIconMaterial Grid.Row="2" Grid.Column="0" Kind="Album" ToolTip="Album" Height="Auto" Width="Auto" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{DynamicResource AccentBaseColorBrush}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" ToolTip="Album" Text="{Binding PlayerApp.CurrentPlaybackStatus.Track.Album.AlbumName}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>

                <Image Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Margin="5" ToolTip="Album Image" Source="{Binding PlayerApp.CurrentPlaybackStatus.Track.Album.Images[0], Converter={StaticResource BitmapImageSourceConverter}}"/>

                <DockPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4">
                    <Button Width="50" Command="{Binding PlayPauseCommand}" Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}">
                        <Image Height="Auto" Width="Auto" Margin="10">
                            <Image.Source>
                                <DrawingImage Drawing="{Binding PlayerApp.CurrentPlaybackStatus.IsPlaying, Mode=OneWay, FallbackValue=False, TargetNullValue=False, Converter={StaticResource IsPlayingIconConverter}}"/>
                            </Image.Source>
                        </Image>
                    </Button>
                    <TextBlock DockPanel.Dock="Left" Margin="5" ToolTip="Current track time" Text="{Binding PlayerApp.CurrentPlaybackStatus.Progress, StringFormat=mm\\:ss}" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    <TextBlock DockPanel.Dock="Right" Margin="5" ToolTip="Total track time" Text="{Binding PlayerApp.CurrentPlaybackStatus.Track.Duration, StringFormat=mm\\:ss}" VerticalAlignment="Center"/>
                    <Controls:MetroProgressBar Margin="5" ToolTip="Current track time" Value="{Binding PlayerApp.CurrentPlaybackStatus.Progress.Ticks, Mode=OneWay}" Maximum="{Binding PlayerApp.CurrentPlaybackStatus.Track.Duration.Ticks, Mode=OneWay}" BorderBrush="{DynamicResource AccentBaseColorBrush}" BorderThickness="1" Foreground="{DynamicResource AccentBaseColorBrush}"/>
                </DockPanel>
            </Grid>
        </ScrollViewer>

        <GridSplitter ResizeDirection="Rows" Grid.Row="1" Height="5" Margin="0,5,0,5" ShowsPreview="False" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="#FFB2B2B2"/>

        <logBox:LogBoxControl Grid.Row="1" x:Name="logBox1" Margin="5,15,5,5"/>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <Image Height="Auto" Width="Auto" Margin="5">
                    <Image.Source>
                        <DrawingImage Drawing="{Binding PlayerApp.IsConnected, Mode=OneWay, Converter={StaticResource IsConnectedIconConverter}}"/>
                    </Image.Source>
                </Image>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Controls:MetroWindow>
